{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2018"],
    "module": "commonjs",
    "strict": true,
    "target": "es2018",
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.js"]
}
